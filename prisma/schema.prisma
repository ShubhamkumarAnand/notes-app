generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  userName  String   @unique
  email     String   @unique
  password  String
  notes     Note[]
  createdAt DateTime @default(now())
}

model Note {
  id          String   @id @default(cuid())
  noteContent String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?

  @@index([noteContent])
}
